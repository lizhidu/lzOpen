<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/id_tv_json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/id_btn_button1"
        android:layout_width="match_parent"
        android:layout_below="@+id/id_tv_json"
        android:layout_marginTop="5dp"
        android:text="点击跳转第二个activity(eventbus3.0)"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/id_tv_message"
        android:layout_width="match_parent"
        android:layout_below="@+id/id_btn_button1"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/id_tv_message"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoSimpleModule"
            android:text="@string/test_button_simple"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoMoreModule"
            android:text="@string/test_button_more"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoLambdaModule"
            android:text="@string/test_button_lambda"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoNetworkModule"
            android:text="@string/test_button_network"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoSafeModule"
            android:text="@string/test_button_safe"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoBindingModule"
            android:text="@string/test_button_binding"/>

    </LinearLayout>
</RelativeLayout>
